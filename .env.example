# PostgreSQL Database Configuration
POSTGRES_USER=cropuser
POSTGRES_PASSWORD=croppass
POSTGRES_DB=cropdb

# Backend Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
MODEL_PATH=/app/model/model.pt
FLASK_ENV=production
FLASK_APP=app.py

# Frontend Configuration
REACT_APP_API_BASE=http://localhost:5000/api
VITE_API_BASE=http://localhost:5000/api

# Optional: Advanced settings
DATABASE_URL=postgresql+psycopg2://cropuser:croppass@db:5432/cropdb
UPLOAD_MAX_SIZE=50MB
MODEL_TYPE=sklearn  # sklearn, pytorch, tensorflow

# Real Satellite and Weather Data APIs
# Get free API key from: https://www.weatherapi.com/
WEATHER_API_KEY=your-weatherapi-key

# NASA API key (DEMO_KEY works with rate limits)
# Get free API key from: https://api.nasa.gov/
NASA_API_KEY=DEMO_KEY

# Sentinel Hub (optional, for high-resolution satellite imagery)
# Get free account at: https://www.sentinel-hub.com/
SENTINELHUB_CLIENT_ID=your-sentinel-client-id
SENTINELHUB_CLIENT_SECRET=your-sentinel-client-secret

# Development settings (for local development only)
# DATABASE_URL=postgresql+psycopg2://cropuser:croppass@localhost:5432/cropdb
# REACT_APP_API_BASE=http://localhost:5000/api
